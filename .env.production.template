# Production Environment Configuration Template
# Copy this file to .env.production and fill in the values

# Node Environment
NODE_ENV=production

# API Keys (Required for functionality)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# macOS Code Signing (Required for macOS distribution)
APPLE_DEVELOPER_ID=Developer ID Application: Your Name (TEAMID)
APPLE_ID=your_apple_id_email@example.com
APPLE_APP_PASSWORD=your_app_specific_password
APPLE_TEAM_ID=your_team_id

# Application Configuration
APP_NAME=DAO Copilot
APP_VERSION=1.0.0
APP_DESCRIPTION=A comprehensive DAO management and collaboration platform

# Security Settings
ENABLE_TELEMETRY=false
DEBUG_MODE=false
CRASH_REPORTING=true

# Build Configuration
BUILD_TARGET=production
MINIFY_CODE=true
GENERATE_SOURCEMAPS=false

# Distribution Settings
AUTO_UPDATE_CHECK=true
UPDATE_SERVER_URL=https://updates.dao-copilot.com